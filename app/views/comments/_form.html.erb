<%= form_for([@blog, @blog.comments.build]) do |f| %>
  <%= f.hidden_field :user_id, :value => current_user.id %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :blog_comment, :rows => 3, :cols => 100 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
