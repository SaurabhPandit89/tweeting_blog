<p id="notice"><%= notice %></p>

<h1 align="center">Post</h1>

<table align="center" style="margin-top:50px">
  <tr>
    <td align="justified"><%= @blog.post %></td>
  </tr>
</table>

<h4>Comments</h4>
<%= render :partial => "comments/show" %>
</br>

<% if current_user %>
  <h4>Add a comment:</h4>
  <%= render :partial => "comments/form" %>
<% end %>
</br>

<div align="center">
  <% if current_user %>
    <%= link_to 'Edit Post', edit_blog_path(@blog) %> |
  <% end %>
  <%= link_to 'Back', blogs_path %>
</div>
